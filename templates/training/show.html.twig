{% extends 'base.html.twig' %}

{% block title %}Training{% endblock %}

{% block body %}
    <h1>Training</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ training.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ training.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ training.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ training.image }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ training.author }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ training.status }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ training.date ? training.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ training.duration }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ training.createdAt ? training.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ training.updatedAt ? training.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_training_index') }}">back to list</a>

    <a href="{{ path('app_training_edit', {'id': training.id}) }}">edit</a>

    {{ include('training/_delete_form.html.twig') }}
{% endblock %}
